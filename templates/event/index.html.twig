{% extends 'base.html.twig' %}

{% block title %}Sorties{% endblock %}

{% block body %}
    <div class="container">
        <div class="right-block">
            <div>
                <p>Date de jour : {{ "now"|date("d/m/Y") }}</p>
                <p>Participant : {# todo: {{ participant.prenom}} {{ participant.nom}} #}XXXXXXXX</p>
            </div>
        </div>
    <h2>Filtrer les sorties</h2>

        {# todo: gerer le formulaire / tous les filtres #}
        <form action="index.html.twig" method="get" class="filters row">
            <div class="col-md-5">
                <select class="custom-select select-campus">
                    <option selected>Sélectionnez un campus</option>
                    {% for cam in campus %}
                    <option value={{ cam.id }}>{{ cam.nameCampus }}</option>
                    {% endfor %}
                </select>

                <input class="form-control form-control-md mr-3 w-75" type="text" placeholder="Le nom de la sortie" aria-label="Search">

                <div class="datepicker">
                    <p>
                        <span>
                            <label for="date-debut">Entre</label>
                            <input type="date" class="form-control" id="date-debut" placeholder="date" aria-label="date" aria-describedby="basic-addon1">
                        </span>
                        <span>
                            <label for="date-fin">et</label>
                            <input type="date" class="form-control" id="date-fin" placeholder="date" aria-label="date" aria-describedby="basic-addon1">
                        </span>
                    </p>
                </div>

            </div>

            <div class="col-md-5 sorties-checkboxes">
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="organisateurSortie">
                    <label class="form-check-label" for="exampleCheck1">Sorties dont je suis l'organisateur/trice</label>
                </div>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="inscritSortie">
                    <label class="form-check-label" for="exampleCheck1">Sorties auxquelles je suis inscrit/e</label>
                </div>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="pasInscritSortie">
                    <label class="form-check-label" for="exampleCheck1">Sorties auxquelles je ne suis pas inscrit/e</label>
                </div>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="sortiesPassees">
                    <label class="form-check-label" for="exampleCheck1">Sorties passées</label>
                </div>
            </div>
            <div class="col-md-2">
            <button type="submit" class="btn btn-primary rechercher-sortie">Rechercher</button>
            </div>

        </form>
        <table class="table table-sorties">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Nom de la sortie</th>
                    <th scope="col">Date de la sortie</th>
                    <th scope="col">Duree</th>
                    <th scope="col">Clôture</th>
                    <th scope="col">Inscrits/places</th>
                    <th scope="col">Etat</th>
                    <th scope="col">Inscrit</th>
                    <th scope="col">Organisateur</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for event in events %}
                <tr>
                    <td>{{ event.name }}</td>
                    <td>{{ event.startDate ? event.startDate|date('Y-m-d') : '' }}</td>
                    <td>{{ event.duration }}</td>
                    <td>{{ event.endDate ? event.endDate|date('Y-m-d') : '' }}</td>
                    <td>0/{{ event.maxRegistrations }}</td>
                    <td>{{ event.eventState }}</td>
                    <td>{{ event.locationNumLocation }}</td>
                    <td>{{ event.organizer }}</td>
                    <td>
                        {# todo: créer un conditionnel pour limiter les actions: si l'organisateur de la sortie est l'utilisateur connecté, il peut modifier ou annuler ses event #}
                        <a href="{{ path('event_show', {'id': event.id}) }}">show</a>
                        <a href="{{ path('event_edit', {'id': event.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="14">Aucune sortie</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <button type="button" class="btn btn-primary creer-sortie"><a href="{{ path('event_new') }}">Créer une sortie</a></button>
    </div>
{% endblock %}
